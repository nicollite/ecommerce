{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6", "ES2020"],
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "types": ["node"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "composite": true,
    "paths": {
      "src/*": ["src/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true
      }
    ]
  },
  "include": ["src/**/*"]
}
